# Find plugins for your editor here: http://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

# Set indentation for JS files
[*.{js,coffee}]
indent_size = 2

# Set indentation for CSS files
[*.{css,scss,sass}]
indent_size = 4

# Disable trimming trailing whitespace in MD files
[*.md]
trim_trailing_whitespace = false
